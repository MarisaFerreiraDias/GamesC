			   printf("Escolha a opção:\n");
               printf("1. Quilos para arrobas\n");
               printf("2. Arrobas em quilos\n");
               do {
                	scanf("%d",&opvolume1);
	                if(opvolume1<1 || opvolume1>2){
				       	printf("ERRO\n");
				    }
				}while(opvolume1<1 || opvolume1>2);
                
			printf("escolha o  volume\n");
			scanf("%f", &volume);	
			       
			if(opvolume ==1){
				printf("%.2f", quilosParaarrobas(volume));
			} else {
				printf("%.2f",	arrobasParaquilos (volume));
			}
			    
		break;
			case '7':
				system("CLS");	
				menuquilosalqueires();
			   volume = 0;
			   opvolume = 0;
			   
			   printf("Escolha a opção:\n");
               printf("1. Quilos para alqueires\n");
               printf("2. Alqueires em quilos\n");
               do {
                	scanf("%d",&opvolume1);
