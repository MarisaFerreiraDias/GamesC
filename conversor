float metros4Parahectares(float metros4){
	return metros4 * 0.0001;
}
float hectaresParametros4(float hectares){
	return hectares * 1000;
}
float quilosParalibras(float quilos){
	return  quilos * 2.20462;
}
float librasParaquilos(float libras){
	return libras / 2.20462;
}
float  quiloPara_arrobas (float quilos){
	return quilos * 15.0;
	
}
float  arrobaParaquilos (float arroba){
	return arroba / 15.0;
	
}
float metrosParapes(float metros){
	return metros * 3.28084;
	
}
float pesParametros(float pes){
	return pes / 3.28084;
	
}
float litros_para_galoes(float litros) {
    return litros * 0.264172;
}
float galoes_para_litros(float galoes) {
    return galoes / 0.264172;
}
void celsiusFahrenheit(){
	
	printf("\t\t__________________________________________________\n");
	printf("\t\t|                                           	 |\n");
	printf("\t\t|    1-Celsius para fahrenheit					 |\n");
	printf("\t\t|    2-Fahrenheit para celcius                   |\n");
	printf("\t\t|    0-Sair                                      |\n");
	printf("\t\t|________________________________________________|\n");
	
}
float celsius_para_fahrenheit(float celsius) {
    return (celsius * 1.8) + 32;
}
float fahrenheit_para_Celsius(float fahrenheit) {
    return (fahrenheit - 32) / 1.8;
}
