double metrosQuadradosParaHectares(double metrosQuadrados) {
    return metrosQuadrados / 10000;
}
double hectaresParaMetrosQuadrados(double hectares) {
    return hectares * 10000;
}
int main(){
	
	setlocale(LC_ALL,"portuguese");
	
	float volume;
	float volume1;
	
	int fechar = false;
	menuPrincipal();
			
	char op;
	int opvolume1;
	int opvolume;
	op = getch();
	

	do{
	
	
	switch(op){
			case '1':
				system("CLS");
				menuMoedas();
				
		break;
			case '2':
				
				system("CLS");
				celsiusFahrenheit();
				
				printf("Escolha a opção:\n");
                printf("1. Celsius para Fahrenheit \n");
                printf("2.  Fahrenheit para Celsius \n");
                do {
                	scanf("%d",&opvolume1);
	                if(opvolume1<1 || opvolume1>2){
				       	printf("ERRO\n");
				    }
				}while(opvolume1<1 || opvolume1>2);
                
			printf("Escolha a quantidade \n");
			scanf("%f", &volume1);	
			       
				   
			if(opvolume ==1){
				printf("%.2f",celsius_para_fahrenheit(volume1));
			} else if(opvolume ==2) {
				printf("%.2f",fahrenheit_para_Celsius(volume1));
			}

			
		break;
			case '3':
				system("CLS");
				menuLitrosGaloes();
				printf("Escolha a opção:\n");
                printf("1. Litros para Galões\n");
                printf("2. Galões para Litros\n");
              do {
                	scanf("%d",&opvolume1);
	                if(opvolume1<1 || opvolume1>2){
				       	printf("ERRO\n");
				    }
				}while(opvolume1<1 || opvolume1>2);
                
			printf("escolha o  volume\n");
			scanf("%f", &volume);	
			       
			if(opvolume ==1){
				printf("%.2f",litros_para_galoes(volume) );
			} else {
				printf("%.2f", galoes_para_litros(volume) );
			}
			
		break;
			case '4':
				
			
	     	system("CLS");
			
			menumetrosmilhas();
				printf("Escolha a opção:\n");
                printf("1. Metros para milhas\n");
                printf("2. Milhas para metros\n");
            do {
                	scanf("%d",&opvolume1);
	                if(opvolume1<1 || opvolume1>2){
				       	printf("ERRO\n");
				    }
				}while(opvolume1<1 || opvolume1>2);
                
			printf("escolha o  volume\n");
			scanf("%f", &volume);	
			       
			if(opvolume ==1){
				printf("%.2f", metrosParaMilhas(volume));
			} else {
				printf("%.2f", milhasParaMetros(volume));
			}
				
				
		break;
			case '5':
				system("CLS");
			   menumetrospes();
			   
			   volume = 0;
